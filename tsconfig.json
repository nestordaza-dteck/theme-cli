{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": true,
        "outDir": "core",
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "noEmit": false,
        "lib": ["ESNext", "DOM"]
    },
    "include": ["src"]
}
